@using NftSample.Dtos.Nft
@if (Nfts == null)
{
    <MudProgressCircular Color="Color.Primary" Style="height:70px;width:70px;" Indeterminate="true"/>
}
else
{
    <MudText Typo="Typo.h5"> Gallery [@(Nfts.Count())] </MudText>
    <br/>
    <MudDivider/>
    <br/>
    <MudGrid >
        @foreach (var nft in Nfts)
        {
            <MudItem xs="6" lg="4">
                <NftCard Nft=@nft/>
            </MudItem>
        }
    </MudGrid>
}

@code {

    [Parameter]
    public IEnumerable<NftDto> Nfts { get; set; }
}

